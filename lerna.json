{
    "version": "independent",
    "packages": [
        "packages/*"
    ],
    "command": {
        "bootstrap": {
            "hoist": true
        },
        "version": {
            "allowBranch": ["master", "main", "release/*"],
            "conventionalCommits": true,
            "message": "chore(release): publish"
        }
    },
    "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
    ]
}